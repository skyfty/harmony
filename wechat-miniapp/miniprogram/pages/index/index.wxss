.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
  gap: 24rpx;
}

.controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.control-button {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 24rpx;
}

.url-loader {
  display: flex;
  flex: 1;
  align-items: center;
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(148, 163, 184, 0.3);
  border-radius: 16rpx;
  padding: 0 16rpx;
  gap: 16rpx;
  min-width: 320rpx;
}

.url-input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  color: #f8fafc;
}

.body {
  flex: 1;
  display: flex;
  gap: 24rpx;
  min-height: 0;
}

.scene-list {
  width: 320rpx;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 16rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.scene-item {
  padding: 16rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  border: 1px solid transparent;
  background: rgba(30, 41, 59, 0.6);
}

.scene-item:last-child {
  margin-bottom: 0;
}

.scene-item.active {
  border-color: #38bdf8;
  background: rgba(56, 189, 248, 0.12);
}

.scene-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #e2e8f0;
}

.scene-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #94a3b8;
}

.empty-hint {
  margin-top: 32rpx;
  text-align: center;
  color: #94a3b8;
  font-size: 26rpx;
}

.preview-area {
  flex: 1;
  position: relative;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 16rpx;
  display: flex;
  align-items: stretch;
  justify-content: center;
  overflow: hidden;
}

canvas {
  flex: 1;
  width: 100%;
  height: 100%;
}

.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.loading-message {
  color: #f8fafc;
  font-size: 28rpx;
}
