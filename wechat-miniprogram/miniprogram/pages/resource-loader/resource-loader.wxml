<view class="page">
  <view class="header">
    <text class="title">正在加载场景资源</text>
    <text class="scene-name">{{sceneName}}</text>
    <text class="scene-id">场景 ID：{{sceneId}}</text>
  </view>

  <view class="card">
    <progress
      percent="{{progressPercent}}"
      stroke-width="8"
      active="{{loading}}"
      active-mode="backwards"
    />
    <view class="summary">
      <text class="summary-text">已缓存 {{completedAssets}} / {{totalAssets}}</text>
      <text class="summary-failed" wx:if="{{failedAssets > 0}}">失败 {{failedAssets}}</text>
    </view>
    <view class="asset" wx:if="{{currentAssetId}}">当前资源：{{currentAssetId}}</view>
    <view class="status">{{statusMessage}}</view>
  </view>

  <button class="cancel-btn" type="warn" bindtap="handleCancel">取消加载</button>
</view>
