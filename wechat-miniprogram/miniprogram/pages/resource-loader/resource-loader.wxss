.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  background-color: #101724;
  color: #f5f8ff;
  gap: 28rpx;
}

.header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #a6c4ff;
}

.scene-name {
  font-size: 28rpx;
  font-weight: 600;
}

.scene-id {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.summary {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-text {
  font-size: 26rpx;
}

.summary-failed {
  font-size: 24rpx;
  color: #ff7a7a;
}

.asset {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  word-break: break-all;
}

.status {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.75);
}

.cancel-btn {
  margin-top: auto;
}
