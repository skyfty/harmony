.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #0d0d0d;
  color: #f0f0f0;
  padding: 20rpx 18rpx 24rpx 18rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: #9fb4ff;
}

.scene-list {
  flex: 1;
  width: 100%;
  margin-bottom: 12rpx;
}

.scene-item {
  background-color: rgba(255, 255, 255, 0.04);
  border-radius: 12rpx;
  padding: 14rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.scene-item.active {
  background: linear-gradient(135deg, rgba(97, 140, 255, 0.35), rgba(58, 83, 155, 0.35));
  border: 1px solid rgba(103, 149, 255, 0.85);
}

.scene-name {
  font-size: 26rpx;
  font-weight: 600;
}

.scene-meta {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.url-form {
  display: flex;
  gap: 8rpx;
  align-items: center;
  flex: 1;
}

.url-input {
  flex: 1;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.06);
  color: #ffffff;
}

.url-placeholder {
  color: rgba(255, 255, 255, 0.35);
}

.status {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.65);
}

.import-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-bottom: 8rpx;
}

.cache-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.04);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 10rpx;
  gap: 12rpx;
}

.cache-info {
  flex: 1;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.status {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.65);
  margin-top: 6rpx;
}
