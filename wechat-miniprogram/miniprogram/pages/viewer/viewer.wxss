.viewer-page {
  position: relative;
  width: 100%;
  height: 100vh;
  background: #000;
  color: #fff;
  display: flex;
  flex-direction: column;
}

.topbar {
  height: 64rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, rgba(0,0,0,0.6), rgba(0,0,0,0.2));
  z-index: 10;
}

.back-btn {
  background: rgba(255,255,255,0.06);
  color: #fff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.scene-title {
  font-size: 28rpx;
  color: #9fb4ff;
  font-weight: 600;
}

.viewer-container {
  flex: 1;
  width: 100%;
  height: calc(100vh - 64rpx);
}

scene-viewer {
  display: block;
  width: 100%;
  height: 100%;
}
