.scene-viewer {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #0a0a0a;
  border-radius: 16rpx;
  overflow: hidden;
}

.scene-canvas {
  width: 100%;
  height: 90%;
  display: block;
  position: absolute;
  z-index:1;
}

.overlay {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.48);
  color: #f9f9f9;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.overlay-error {
  background-color: rgba(128, 32, 32, 0.65);
}

.joystick {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 200rpx;
  height: 200rpx;
  z-index: 99;
}

.joystick-base {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 1000px;
  background-color: rgba(32, 32, 32, 0.65);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.joystick-base.active {
  border-color: rgba(90, 180, 255, 0.85);
  background-color: rgba(32, 32, 32, 0.8);
}

.joystick-track {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  border-radius: 1000px;
  border: 2rpx solid rgba(255, 255, 255, 0.25);
  opacity: 0.7;
}

.joystick-stick {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 96rpx;
  height: 96rpx;
  margin-left: -48rpx;
  margin-top: -48rpx;
  border-radius: 1000px;
  background-color: rgba(90, 180, 255, 0.95);
  border: 2rpx solid rgba(255, 255, 255, 0.9);
}
