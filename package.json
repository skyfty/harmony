  "version": "0.1.0",
  "workspaces": [
    "admin",
    "editor",
    "server",
    "miniprogram"
  ],
  "scripts": {
    "dev:admin": "npm --workspace admin run dev",
    "dev:editor": "npm --workspace editor run dev",
    "dev:server": "npm --workspace server run dev",
    "dev:miniprogram": "npm --workspace miniprogram run dev",
