{
  "name": "@harmony/schema",
  "version": "0.1.0",
  "description": "Shared scene schema definitions for Harmony clients",
  "type": "module",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node scripts/copy-terrain-scatter.cjs && harmony-tools fix-esm-extensions --root dist",
    "build:asset-types": "tsc -p tsconfig.asset-types.json"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./asset-api": {
      "types": "./dist/asset-api.d.ts",
      "default": "./dist/asset-api.js"
    },
    "./terrain-scatter": {
      "types": "./dist/terrain-scatter.d.ts",
      "default": "./dist/terrain-scatter.js"
    }
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "fflate": "^0.8.2",
    "polygon-clipping": "^0.15.7",
    "three-mesh-bvh": "^0.9.1",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@types/three": "^0.171.0",
    "@harmony/tools": "file:../tools",
    "typescript": "^5.4.5"
  }
}
