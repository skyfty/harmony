{
  "name": "@harmony/schema",
  "version": "0.1.0",
  "description": "Shared scene schema definitions for Harmony clients",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp terrain-scatter.js terrain-scatter.d.ts dist/ && node scripts/fix-esm-extensions.cjs",
    "build:asset-types": "tsc -p tsconfig.asset-types.json"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./asset-api": {
      "types": "./dist/asset-api.d.ts",
      "default": "./dist/asset-api.js"
    },
    "./terrain-scatter": {
      "types": "./dist/terrain-scatter.d.ts",
      "default": "./dist/terrain-scatter.js"
    }
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@types/three": "^0.171.0",
    "typescript": "^5.4.5"
  }
}
